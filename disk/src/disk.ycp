{

/***
 * <h3>Configuration of the disk</h3>
 */
  
   textdomain "storage";

   import "Mode";
   import "Arch";
   import "Installation";
   import "Storage";
   import "Wizard";
  
   
   include "partitioning/partition_defines.ycp";
   include "partitioning/disk_io.ycp";
   include "partitioning/auto_part_functions.ycp";

  
   Mode::installation = false; 

   
   string msg=_("Only use this program if you are familiar with partitioning hard disks.

Never partition disks which may, in any way, be in use
(mounted, swap, etc.) unless you are know exactly what you are
doing. Otherwise, the partitioning table will not be forwarded to the
kernel, which would most likely lead to data loss.

To continue despite this warning, click Yes.
");
   
   if(UI::YesNoHeadlinePopup(_("Warning!"),msg)==true)
   {
     Storage::StorageReadInSystem();
     WFM::CallFunction(`inst_disk(true,  true));
   }

   return true;
}   
