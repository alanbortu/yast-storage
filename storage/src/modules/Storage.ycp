		 search( l["fields",1]:"", "/media/dvd" )==0 ||
		 search( l["fields",1]:"", "/media/cdrecorder" )==0 ||
		 search( l["fields",1]:"", "/media/dvdrecorder" )==0 ||
		 search( l["fields",1]:"", "/cdrom" )==0 ||
