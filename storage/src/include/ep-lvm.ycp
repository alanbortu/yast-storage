    void HandleLvmLvPanel(any user_data, symbol widget)
    {
	string device = (string) user_data;

	switch (widget)
	{
	    case `edit:
		EpEditLogicalVolume(device);
		break;

	    case `resize:
		EpResizeLogicalVolume(device);
		break;

	    case `delete:
		EpDeleteLogicalVolume(device);
		break;
	}
    }
}
