## configure.in.in for yast2-storage

## Initialize
@YAST2-INIT-COMMON@
@YAST2-INIT-YCP@
@YAST2-INIT-PROGRAM@

## check for some programs
AC_CHECK_PROGS([SWIG], [swig])
if test -z "$SWIG"; then
	AC_MSG_ERROR([install swig])
fi
AC_CHECK_PROGS([SABCMD], [sabcmd])
if test -z "$SABCMD"; then
	AC_MSG_ERROR([install sablotron])
fi

## some common checks
@YAST2-CHECKS-COMMON@
@YAST2-CHECKS-YCP@
@YAST2-CHECKS-PROGRAM@

## move to an aclocal macro?
## Find out what compiler/linker flags an embedded Perl interpreter needs
PERL_CFLAGS=`perl -MExtUtils::Embed -e 'ccopts'`
PERL_LDFLAGS=`perl -MExtUtils::Embed -e 'ldopts'`
AC_SUBST(PERL_CFLAGS)
AC_SUBST(PERL_LDFLAGS)

## Where to install modules
PERL_VENDORARCH=`perl -V:vendorarch | sed "s!.*='!!;s!'.*!!"`
AC_SUBST(PERL_VENDORARCH)

## and generate the output...
@YAST2-OUTPUT@
